pipeline {
  agent {
    docker {
      image 'maven:latest'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }
  stages {
    stage('Git-checkout') {
      steps {
        sh 'echo passed'
      }
    }
    stage('maven build') {
      steps {
        sh 'mvn clean package'
        echo 'maven build works'
      }
    }
  }
}
